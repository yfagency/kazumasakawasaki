<style>
  .academy-register {
    padding: 100px 25px;
    color: #111;
    font-family: "Open Sans";
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 300px;
    letter-spacing: 0;
  }

 .academy-register a:not(.academy-register__line) {
  color: #111;
  font-family: "Open Sans";
  font-size: 18px;
  font-style: normal;
  font-weight: 400;
  line-height: 24px;
  text-decoration: underline;
 }

 .academy-register h2,
 .academy-register h3,
 .academy-register h4,
 .academy-register h5,
 .academy-register h6 {
  color: #111;
  font-family: "Open Sans";
  font-size: 26px;
  font-style: normal;
  font-weight: 600;
  line-height: normal;
  text-transform: uppercase;
  margin-bottom: 16px;
 }

 .academy-register h1 {
  margin-bottom: 0;
  color: #111;
  text-shadow: 0px 4px 44px rgba(0, 0, 78, 0.25);
  font-family: "Playfair Display";
  font-size: 40px;
  font-style: normal;
  font-weight: 500;
  line-height: 100%;
  letter-spacing: 2.4px;
  text-transform: uppercase;
 }

 .academy-register__topText {
  color: #F32652;
  text-shadow: 0px 4px 44px rgba(0, 0, 78, 0.25);
  font-family: "Open Sans";
  font-size: 18px;
  font-style: normal;
  font-weight: 400;
  line-height: 140%;
  letter-spacing: 0.9px;
  text-transform: uppercase;
 }

 .academy-register__topSection {
  text-align: center;
  margin-top: 40px;
  display: block;
 }

 .academy-register__topSection span {
  color: #111;
  text-align: center;
  font-family: "Open Sans";
  font-size: 24px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  letter-spacing: 4.8px;
  display: block;
  margin: 0 0 10px;
 }

 .academy-register__topSection h1 {
  color: #111;
  text-align: center;
  font-family: "Playfair Display";
  font-size: 40px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  letter-spacing: 4px;
  text-transform: uppercase;
  margin-bottom: 30px;
 }

 .academy-register__topSection p {
  color: #111;
  text-align: center;
  font-family: "Open Sans";
  font-size: 18px;
  font-style: normal;
  font-weight: 400;
  line-height: 1.5;
 }

 .academy-register > img {
  object-fit: cover;
  object-position: top;
  margin-bottom: 100px;
  width: 100%;
  aspect-ratio: 4/5;
 }

 .academy-register__line {
  display: inline-flex;
  align-items: center;
  background: #00B900;
  color: #fff !important;
  border-radius: 10px;
  font-weight: bold;
  transition: .3s;
  letter-spacing: 0;
  font-size: 20px;
  margin-bottom: 50px;
 }

 .academy-register__line:hover {
  opacity: .9;
  transition: .3s;
 }

 .academy-register__line img {
  width: 80px;
 }

 .academy-register__line span {
  padding: 0 20px;
 }

 @media (max-width: 600px) {
  .academy-register__topSection {
    padding: 25px;
  }

  .academy-register {
    display: flex;
    flex-direction: column-reverse;
    gap: 100px;
    padding: 50px 25px;
  }

  .academy-register > img {
    object-fit: cover;
    object-position: top;
    margin-bottom: 0;
    width: 100%;
    aspect-ratio: 4/5;
  }
 }
</style>

