<style>
  .main-blog {
    padding: 0 25px;
  }

  .main-blog a {
    text-decoration: none !important;
  }

  h1.title--primary {
    color: #111;
    text-align: center;
    font-family: "Playfair Display", serif !important;
    text-transform: uppercase;
    margin: 0 auto 70px;
  }

  .blog-articles.blog-articles--collage {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 40px;
  }

  .blog-articles.blog-articles--collage .blog-articles__article.article {
    grid-column: auto;
  }

  .card__inner {
    aspect-ratio: 1/1;
    max-width: 375px;
  }

  .card__inner.ratio {
    display: block;
  }

  .card.article-card.card--standard.article-card__image--medium.card--media {
    display: grid;
    gap: 20px;
    grid-template-columns: .75fr 1.25fr;
  }

  .card__information {
    text-align: left;
    padding: 0 !important;
  }

  h3.card__heading.h2 {
    color: #000;
    font-family: 'Open Sans', sans-serif;
    font-size: 22px;
    font-style: normal;
    font-weight: 500;
    line-height: 140%;
    text-transform: uppercase;
    letter-spacing: 0;
  }

  p.article-card__excerpt {
    color: #111;
    font-family: "Open Sans", sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px;
    /* 150% */
    letter-spacing: 0;
    margin-left: 0 !important;
  }

  .article-card__info {
    color: #4D4D4D;
    font-family: "Open Sans", sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px;
    /* 150% */
    text-transform: capitalize;
    letter-spacing: 0;
  }

  @media (max-width: 1280px) {
    .blog-articles.blog-articles--collage {
      grid-template-columns: 1fr;
    }
  }

  @media (orientation: portrait) {
    .card.article-card.card--standard.article-card__image--medium.card--media {
      display: grid;
      gap: 20px;
      grid-template-columns: 1fr;
    }

    .card__inner {
      aspect-ratio: 4/3;
      max-width: 100%;
    }

    h1.title--primary {
      font-size: 32px;
      line-height: 1;
      margin-bottom: 40px;
    }
  }

  /* ########## KK WAY ########## */
  .products-kkWay__container {
    text-align: center;
    padding: 100px 25px;
  }

  .products-kkWay__title {
    color: #000;
    text-align: center;
    font-family: "Bodoni Moda", serif;
    text-transform: uppercase;
    margin: 0 0 20px;
  }

  .products-kkWay__text {
    color: #111;
    text-align: center;
    margin: 0 auto 60px;
    max-width: 700px;
  }

  .products-kkWay__cards {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 40px;
  }

  .products-kkWay__item {
    aspect-ratio: 5/6;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .products-kkWay__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .products-kkWay__cardTitle {
    color: #FFF;
    text-align: center;
    text-shadow: 0px 4px 44px rgba(0, 0, 78, 0.25);
    font-family: "Bodoni Moda", serif;
    text-transform: uppercase;
    margin: 0 0 5px;
  }

  .products-kkWay__cardSubtitle {
    color: #fff;
    text-align: center;
    text-shadow: 0px 4px 44px rgba(0, 0, 78, 0.25);
    font-family: "Open Sans", sans-serif;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
    letter-spacing: 1.62px;
    text-transform: uppercase;
  }

  .products-kkWay__cardBottom {
    display: flex;
    padding: 20px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-self: stretch;
    background: #1C1952;
  }

  @media screen and (max-width: 1024px) {
    .products-kkWay__cardTitle {
      font-size: 32px;
      line-height: 1.25;
    }

    .products-kkWay__cards {
      display: grid;
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  @media (orientation: portrait) {
    .products-kkWay__container {
      padding: 50px 25px;
    }

    .products-kkWay__text {
      font-size: 16px;
      line-height: 1.5;
    }

    .products-kkWay__cards {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
  }
</style>

