<script>

  const classes = [
    '.academy-story__anim1',
    '.academy-course__anim1',
    '.academy-course__anim2',
    '.academy-course__anim3',
    '.academy-features__anim1',
    '.academy-features__anim2',
    '.faq-accordion__anim1',
    '.faq-accordion__anim2'
  ]

  classes.forEach((cls) => {
    gsap.from(cls, {
      bottom: "-100",
      position: 'relative',
      opacity: 0,
      duration: 1,
      delay: 0.1,
      ease: "power3.out",
      stagger: 0.1,
      scrollTrigger: {
        trigger: cls,
        start: "top 80%",
      }
    })
  })

</script>