<style>
  /* ########## HERO ########## */
  .products-hero {
    position: relative;
    color: #fff;
    display: flex;
    align-items: center;
  }

  .products-hero__container {
    padding: 100px 25px;
    width: 100%;
  }

  .products-hero__left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    max-width: 36.667vw;
  }

  .products-hero__blueBg {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    z-index: -1;
    width: 100%;
    object-fit: cover;
    object-position: right;
  }

  .products-hero__picture {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    object-fit: cover;
    height: 100%;
    z-index: -2;
    right: -5%;
  }

  .products-hero__subtitle {
    color: #fff;
    text-shadow: 0px 4px 44px rgba(0, 0, 78, 0.25);
    font-family: "Bodoni Moda", serif;
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%;
    letter-spacing: 1.62px;
    text-transform: uppercase;
  }

  .slideSubtitle {
    color: #FFF;
    font-family: "Open Sans", sans-serif;
    font-size: clamp(16px, 1.375vw, 22px);
    font-style: normal;
    font-weight: 600;
    line-height: 140%;
    text-transform: uppercase;
    margin: 0 0 30px;
