    .swiper .swiper-slide {
      display: flex;
      flex-direction: column-reverse;
    }

    .products-hero {
      aspect-ratio: unset;
      display: flex;
      align-items: center;
    }

    .products-hero__left {
      display: flex;
      align-items: flex-start;
      max-width: 75%;
